{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ammend",
            "type": "shell",
            "command": "$tags = git tag --points-at HEAD; git add .; git commit --amend --no-edit; if ($tags) { foreach ($tag in $tags) { git tag -f $tag } }",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}